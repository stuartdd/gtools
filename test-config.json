{
    "config": {
        "showExit1": false,
        "localValues": {
            "commitMessage": {
                "desc": "Commit message",
                "value": "commit",
                "input": true
            },
            "password1": {
                "desc": "Password",
                "input": true,
                "value": "",
                "minLen": 0,
                "isPassword": true
            }
        }
    },
    "actions": [
        {
            "name": "Write Enc",
            "desc": "Write an encrypted file",
            "list": [
                {
                    "cmd": "echo",
                    "args": [
                        "Pw IN %{commitMessage}"
                    ]
                },
                {
                    "cmd": "git",
                    "outFile": "encFile.txt",
                    "args": [
                        "config",
                        "-l"
                    ],
                    "outPwName": "password1"
                },
                {
                    "cmd": "echo",
                    "args": [
                        "Pw AFTER %{password1}"
                    ]
                }
            ]
        },
        {
            "name": "Read Enc",
            "desc": "Read an encrypted file",
            "list": [
                {
                    "cmd": "cat",
                    "args": [
                        "encFile.txt"
                    ]
                }
            ]
        }
    ]
}