{
    "config": {
        "debugFile": "",
        "localValues": {
            "commitMessage": {
                "desc": "Commit message",
                "value": "",
                "input": true
            },
            "password1": {
                "desc": "Password",
                "input": true,
                "value": "",
                "minLen": 5,
                "isPassword": true
            },
            "tempFile": {
                "desc": "Temp File",
                "input": true,
                "value": "",
                "isFileName": true
            },
            "PiServer": {
                "desc": "PiServer",
                "value": "http://192.168.1.243:8080"
            },
            "GitServer": {
                "desc": "GitServer",
                "value": "https://github.com/stuartdd/gtools"
            },
            "FileWatch": {
                "desc": "FileWatch",
                "value": ".localauthentication.data",
                "isFileWatch": true
            }
        }
    },
    "actions": [
        {
            "tab": "Z:Config",
            "name": "Install gtool-config.json",
            "desc": "Decrypt gtool-config.json.blob --> %{HOME}",
            "list": [
                {
                    "cmd": "mv",
                    "args": [
                        "-f",
                        "%{HOME}/gtool-config.json",
                        "%{HOME}/gtool-config.json.bak"
                    ],
                    "ignoreError": true
                },
                {
                    "cmd": "cat",
                    "args": [],
                    "in": "file:gtool-config.json.blob",
                    "inPwName": "password1",
                    "outFile": "%{HOME}/gtool-config.json"
                }
            ]
        },
        {
            "tab": "Z:Test",
            "name": "Encrypt a file",
            "desc": "Read, Encrypt and Write",
            "list": [
                {
                    "cmd": "cat",
                    "args": [
                        "%{tempFile}"
                    ],
                    "outFile": "%{tempFile}.blob",
                    "outPwName": "password1"
                }
            ]
        },
        {
            "tab": "Z:Test",
            "name": "Decrypt a file",
            "desc": "Read, Decrypt and Write",
            "list": [
                {
                    "cmd": "cat",
                    "args": [],
                    "in": "file:%{tempFile}",
                    "inPwName": "password1",
                    "outFile": "%{tempFile}.txt"
                }
            ]
        },
        {
            "tab": "Z:Test",
            "name": "Write Enc",
            "desc": "Write an encrypted file",
            "list": [
                {
                    "cmd": "git",
                    "outFile": "%{tempFile}",
                    "args": [
                        "config",
                        "-l"
                    ],
                    "outPwName": "password1"
                }
            ]
        },
        {
            "tab": "Z:Test",
            "name": "HTTP Get",
            "desc": "Read a message from server",
            "list": [
                {
                    "cmd": "cat",
                    "in": "http:%{PiServer}/files/user/stuart/loc/mydb/name/xxx.data",
                    "args": []
                }
            ]
        },
        {
            "tab": "Z:Test",
            "name": "HTTP Post",
            "desc": "Read a message from server",
            "list": [
                {
                    "cmd": "git",
                    "args": [
                        "config",
                        "-l"
                    ],
                    "outFile": "http:%{PiServer}/files/user/stuart/loc/mydb/name/xxx.data"
                }
            ]
        },
        {
            "tab": "Z:Test",
            "name": "Read Enc",
            "desc": "Read an encrypted file",
            "list": [
                {
                    "cmd": "cat",
                    "args": [],
                    "in": "file:%{tempFile}",
                    "inPwName": "password1"
                }
            ]
        },
        {
            "tab": "Z:Test",
            "name": "Remove",
            "desc": "Remove '%{FileWatch}'",
            "list": [
                {
                    "cmd": "rm",
                    "args": [
                        "%{FileWatch}"
                    ]
                }
            ]
        },
        {
            "tab": "Z:Test",
            "name": "Return NZ",
            "desc": "Return NZ response to cmd",
            "list": [
                {
                    "cmd": "./retrc",
                    "args": [
                        "9"
                    ]
                }
            ]
        }
    ]
}