{
    "config": {
        "showExit1": false,
        "localConfig": "test-config.json",
        "localValues": {
            "commitMessage": {
                "desc": "Commit message",
                "value": "Local commit",
                "input": true
            },
            "password1": {
                "desc": "Password",
                "input": true,
                "value": "",
                "minLen": 5,
                "isPassword": true
            },
            "tempFile": {
                "desc": "Temp File",
                "input": true,
                "value": "",
                "isFileName": true
            }
        }
    },
    "actions": [
        {
            "name": "Write Enc",
            "desc": "Write an encrypted file",
            "list": [
                {
                    "cmd": "git",
                    "outFile": "%{tempFile}",
                    "args": [
                        "config",
                        "-l"
                    ],
                    "outPwName": "password1"
                }
            ]
        },
        {
            "name": "Read Enc",
            "desc": "Read an encrypted file",
            "list": [
                {
                    "cmd": "cat",
                    "args": [],
                    "in": "file:%{tempFile}",
                    "inPwName" : "password1"
                }
            ]
        },
        {
            "name": "Remove",
            "desc": "Remove '%{tempFile}'",
            "list": [
                {
                    "cmd": "rm",
                    "args": ["%{tempFile}"]
                }
            ]
        }
    ]
}